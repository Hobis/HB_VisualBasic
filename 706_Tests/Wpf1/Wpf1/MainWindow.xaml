<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="700" Width="500" ResizeMode="CanMinimize" Left="100" Top="100" Loaded="p_Me_Loaded">
    <Grid>
        <TextBox Name="TextBox1" Margin="10,10,10,101" TextWrapping="NoWrap" AcceptsReturn="True" Text=""
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button Content="Clear" Margin="0,0,90,10" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="p_Clear_Click"/>
        <Button Content="Start" Margin="0,0,10,10" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="p_Start_Click"/>
    </Grid>
</Window>
