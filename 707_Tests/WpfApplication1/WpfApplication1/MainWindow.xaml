<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="400" Width="600" ResizeMode="CanMinimize" Left="200" Top="200" Loaded="p_Me_Loaded">
    <Grid>
        <TextBox HorizontalAlignment="Left"
                 Width="494"
                 Margin="10,10,0,10"
                 Text="TextBox"
                 TextWrapping="NoWrap"
                 AcceptsReturn="True"
                 ScrollViewer.CanContentScroll="True"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 Name="TextBox1"/>
        
        <Button Content="Clear" HorizontalAlignment="Left" Margin="509,316,0,0" VerticalAlignment="Top" Width="75" Click="p_Clear_Click"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="509,341,0,0" VerticalAlignment="Top" Width="75" Click="p_Start_Click"/>
    </Grid>
</Window>
